<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/theme_recycle_view"
        android:padding="30dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout android:id="@+id/footer" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_alignParentBottom="true" style="@style/ButtonBar">

        <Button android:id="@+id/cancelButton" android:layout_width="wrap_content"
            style="?dynamicButtonTheme"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:layout_marginRight="2dip"
            android:text="Cancel" />

        <Button android:id="@+id/change_theme_button" android:layout_width="wrap_content"
            style="?dynamicButtonTheme"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:text="Change Color" />
    </LinearLayout>



</RelativeLayout>
