<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.home.ubbs.mathwhizz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeIndigo">
        <activity android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SettingsActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activity.PlayActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activity.ResultsActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activity.CompleteActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activity.ChangeThemeActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activity.LicenseActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"/>
    </application>

</manifest>